<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import org.peerbox.view.controls.* ?>

<AnchorPane prefWidth="275.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.peerbox.presenter.LoginController">
	<children>
		<ProgressIndicator fx:id="piProgress" visible="false" />
		<GridPane fx:id="grdForm" hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
			<ErrorLabel fx:id="lblError" iconHeight="20.0" GridPane.rowIndex="0" />
				<TextField fx:id="txtUsername" promptText="Enter username" GridPane.columnIndex="0"  GridPane.rowIndex="1" />
				<PasswordField fx:id="txtPassword" promptText="Enter password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<PasswordField fx:id="txtPin" promptText="Enter PIN" GridPane.columnIndex="0" GridPane.rowIndex="3" />
				<HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.valignment="CENTER">
					<children>
						<TextField fx:id="txtRootPath" promptText="Enter path" GridPane.columnIndex="0" GridPane.rowIndex="3" HBox.hgrow="SOMETIMES" />
						<Button mnemonicParsing="false" onAction="#changeRootPathAction" prefHeight="25.0" text="..." />
					</children>
				</HBox>
				<CheckBox fx:id="chbAutoLogin" mnemonicParsing="false" text="Login automatically" GridPane.columnIndex="0" GridPane.rowIndex="5" />
				<HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="6">
					<children>
						<Button cancelButton="true" mnemonicParsing="false" onAction="#navigateBackAction" prefWidth="100.0" text="Back" />
						<Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#loginAction" prefWidth="100.0" text="Login" />
					</children>
				</HBox>
				<Separator GridPane.rowIndex="7" />
				<VBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="8">
					<children>
						<Label text="Don't have an account?" />
						<Button fx:id="btnRegister" mnemonicParsing="false" onAction="#registerAction" prefWidth="100.0" text="Register" GridPane.rowIndex="7" />
					</children>
				</VBox>
			</children>
		</GridPane>
	</children>
</AnchorPane>
