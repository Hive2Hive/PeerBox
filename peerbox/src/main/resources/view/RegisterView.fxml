<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import org.peerbox.view.controls.* ?>

<AnchorPane prefWidth="275.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.peerbox.presenter.RegisterController">
   <children>
      <ProgressIndicator fx:id="piProgress" visible="false" />
      <GridPane fx:id="grdForm" hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" />
			<ColumnConstraints hgrow="SOMETIMES" />
		</columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ErrorLabel fx:id="lblError" iconHeight="20.0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
            <TextField fx:id="txtUsername" promptText="Enter username" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <PasswordField fx:id="txtPassword_1" promptText="Enter password" GridPane.rowIndex="2" />
            <PasswordField fx:id="txtPassword_2" promptText="Confirm password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <PasswordField fx:id="txtPin_1" promptText="Enter PIN" GridPane.rowIndex="3" />
            <PasswordField fx:id="txtPin_2" promptText="Confirm PIN" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
               <children>
                  <Button fx:id="btnBack" cancelButton="true" mnemonicParsing="false" onAction="#navigateBackAction" prefWidth="100.0" text="Back">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnRegister" defaultButton="true" mnemonicParsing="false" onAction="#registerAction" prefWidth="100.0" text="Register" />
               </children>
            </HBox>
         </children>
      </GridPane>
    </children>
    </AnchorPane>
