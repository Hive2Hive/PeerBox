<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0"
	VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="org.peerbox.presenter.RegisterController">
	<children>
		<GridPane fx:id="grdForm" hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="20.0"
			AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
			<columnConstraints>
				<ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="100"
					minWidth="75.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Username" />
				<Label text="Password" GridPane.rowIndex="1" />
				<Label text="PIN" GridPane.rowIndex="2" />
				<TextField fx:id="txtUsername" promptText="Enter username" GridPane.columnIndex="1"
					GridPane.columnSpan="2" />
				<PasswordField fx:id="txtPassword_1" promptText="Enter password"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<PasswordField fx:id="txtPassword_2" promptText="Confirm password"
					GridPane.columnIndex="2" GridPane.rowIndex="1" />
				<PasswordField fx:id="txtPin_1" promptText="Enter PIN" GridPane.columnIndex="1"
					GridPane.rowIndex="2" />
				<PasswordField fx:id="txtPin_2" promptText="Confirm PIN" GridPane.columnIndex="2"
					GridPane.rowIndex="2" />
				<HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.columnSpan="2"
					GridPane.rowIndex="3" GridPane.valignment="CENTER">
					<children>
						<Button fx:id="btnRegister" mnemonicParsing="false" onAction="#registerAction"
							prefWidth="100.0" text="Register" />
						<Button fx:id="btnBack" mnemonicParsing="false" onAction="#goBack" prefWidth="100.0"
							text="Back">
							<HBox.margin>
								<Insets left="10.0" />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
			</children>
		</GridPane>
		<ProgressIndicator fx:id="piProgress" visible="false" />
	</children>
</AnchorPane>
